<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.stambulo.mobileshop.presentation.fragments.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_products"
            app:destination="@+id/productsFragment"
            app:popUpTo="@layout/fragment_splash"/>
    </fragment>

    <fragment
        android:id="@+id/productsFragment"
        android:name="com.stambulo.mobileshop.presentation.fragments.ProductsFragment"
        android:label="fragment_products"
        tools:layout="@layout/fragment_products">
    </fragment>

</navigation>
